CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = main.c school.c
NAME = school
RM = rm -f

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(SRC:.c=.o)
	$(CC) $(CFLAGS) -o $(NAME) $^

-include $(SRC:.c=.d)

%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $< -MMD -MP

clean:
	$(RM) $(NAME) *~ \#*\# .\#*

oclean:
	$(RM) $(SRC:.c=.o) $(SRC:.c=.d)

fclean: clean oclean

re: fclean all
