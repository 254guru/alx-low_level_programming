CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = main.c school.c
NAME = school

.PHONY: all clean oclean fclean re

all: m.h $(NAME)

$(NAME): $(SRC:.c=.o)
	$(CC) $(CFLAGS) -o $(NAME) $^

-include $(SRC:.c=.d)

clean:
	$(RM) $(NAME) *~ \#*\# .\#*

oclean:
	$(RM) $(SRC:.c=.o) $(SRC:.c=.d)

fclean: clean oclean

re: fclean all
